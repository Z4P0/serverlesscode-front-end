doctype html
html(lang="en").no-js
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    block title
      title Serverless Code
    meta(name="description", content="Front-end source for serverlesscode.com")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="apple-touch-icon", href="apple-touch-icon.png")
    script(type="text/javascript").
      WebFontConfig = {
        google: { families: [ 'Source+Code+Pro::latin', 'Source+Sans+Pro:400,700:latin' ] }
      };
      (function() {
        var wf = document.createElement('script');
        wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
        wf.type = 'text/javascript';
        wf.async = 'true';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(wf, s);
      })();
    link(rel="stylesheet", href="css/styles.css")

  body
    a(href="#main").show-on-focus Skip to main content
    .container
      header.global-header
        .row.page-section
          .columns.small-7.medium-4
            h1.h1
              a(href="index.html") Serverless Code
          .columns.small-5.medium-8
            nav.global-nav
              h2.show-for-sr Site Navigation
              a#site-nav-toggle(href="#site-nav-list", data-toggle="#site-nav-list:active").global-nav-toggle.show-for-small-only Menu
              ul#site-nav-list.site-nav-list
                li
                  a(href="#") Articles
                li
                  a(href="#") Interviews
                li
                  a(href="#") Tutorials
                li
                  a(href="#") About
                li
                  a(href="#") Archive

      main#main.main
        block content
          .row.page-section
            .columns.medium-8.medium-centered.large-6
              p Front-end source for serverlesscode.com
      footer.global-footer.jet-bg.white
        .row.thin-page-section
          //- .columns.small-12.medium-4
            h2 Newsletter Signup
            form(action="#")
              input(type="email", placeholder="email")
              input(type="submit")
          //- .columns.small-12.medium-8.text-right
          .columns.small-12.text-right
